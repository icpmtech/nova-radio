  </header>  <div class="container">
    <h1>Treino Morse</h1>
    <div id="currentSentence">Palavra: SOS</div>
    <div id="morseCode">Código Morse: ... --- ...</div>
    <div id="userInput">Tocaste: </div><div class="tap-area" id="tapArea">Tap</div>
<div id="feedback">Toca o código Morse</div>
<button onclick="reset()">Reset</button>

  </div>  <footer class="footer">
    © 2025 SOS Trainer. Todos os direitos reservados.
  </footer>  <script>
    const sentences = {
      "SOS": "...---...",
      "HELP": "......-...--.",
      "EMERGENCY": ".--.--.-..-.--.-.--.-.--"
    };

    const tapArea = document.getElementById('tapArea');
    const feedback = document.getElementById('feedback');
    const currentSentenceEl = document.getElementById('currentSentence');
    const morseCodeEl = document.getElementById('morseCode');
    const userInputEl = document.getElementById('userInput');

    let selected = "SOS";
    let target = sentences[selected];
    let tapSequence = [];
    let lastTapTime = 0;

    const dotSound = new Audio("https://freesound.org/data/previews/64/64549_634166-lq.mp3");
    const dashSound = new Audio("https://freesound.org/data/previews/67/67451_634166-lq.mp3");

    function speak(text) {
      const msg = new SpeechSynthesisUtterance(text);
      msg.lang = "en-US";
      window.speechSynthesis.speak(msg);
    }

    function reset() {
      tapSequence = [];
      selected = Object.keys(sentences)[Math.floor(Math.random() * Object.keys(sentences).length)];
      target = sentences[selected];
      currentSentenceEl.textContent = "Palavra: " + selected;
      morseCodeEl.textContent = "Código Morse: " + target;
      userInputEl.textContent = "Tocaste: ";
      feedback.textContent = "Toca o código Morse";
      feedback.className = '';
    }

    tapArea.addEventListener('mousedown', () => { lastTapTime = Date.now(); });
    tapArea.addEventListener('mouseup', () => {
      const duration = Date.now() - lastTapTime;
      const symbol = duration < 200 ? '.' : '-';
      tapSequence.push(symbol);
      userInputEl.textContent = "Tocaste: " + tapSequence.join('');
      if (symbol === '.') { dotSound.currentTime = 0; dotSound.play(); }
      else { dashSound.currentTime = 0; dashSound.play(); }
      if (tapSequence.join('').length >= target.length) checkSequence();
    });

    function checkSequence() {
      if (tapSequence.join('') === target) {
        feedback.textContent = "CÓDIGO CORRETO!";
        feedback.className = 'correct';
        speak(`${selected} enviado!`);
      } else {
        feedback.textContent = "Errado! Tenta outra vez.";
        feedback.className = 'wrong';
        speak("Erro na sequência.");
      }
    }

    // Iniciar app
    reset();
  </script></body>
</html>
